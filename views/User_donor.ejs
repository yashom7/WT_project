                                                <label data-error="wrong" data-success="right" for="orangeForm-name">Your Pincode</label>
                                                </div>
                                <div class="md-form mb-5">
                                                <i class="fa fa-user prefix grey-text"></i>
                                                <input type="text" id="orangeForm-name" class="form-control validate" pattern="^[0-9]*$">
